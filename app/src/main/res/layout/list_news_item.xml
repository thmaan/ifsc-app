<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Novas Vagas no campus Canoinhas"
            android:layout_margin="5dp"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">


        <TextView
            android:id="@+id/news_description"
            android:layout_marginLeft="5dp"
            android:layout_width="355dp"
            android:layout_height="114dp"
            android:text="Foi divulgado no dia 09/02, que o edital de ingresso do curso de ADS do ifsc estara aberto entre os dias XX e XX de XX, para mais informações visite o site
" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp">

        <TextView
            android:id="@+id/news_published_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data de publicação: 25/02/2020"
            />
    </LinearLayout>



</androidx.cardview.widget.CardView>